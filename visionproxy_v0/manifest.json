{
  "manifest_version": 3,
  "name": "VisionProxy",
  "version": "1.0",
  "description": "AI-powered photosensitive protection.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "VisionProxy Settings"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
