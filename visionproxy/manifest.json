{
  "manifest_version": 3,
  "name": "VisionProxy",
  "version": "1.0",
  "description": "Photosensitive protection.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "declarativeNetRequest" 
  ],
  "host_permissions": [
    "https://*.googlevideo.com/*",
    "https://*.youtube.com/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "VisionProxy Settings"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "cors_rules",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}